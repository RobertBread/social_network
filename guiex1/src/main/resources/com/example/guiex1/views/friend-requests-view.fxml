<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@/com/example/guiex1/css/style_requests.css" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guiex1.controller.FriendRequestController">
    <children>
        <TableView fx:id="tableView" layoutX="15.0" layoutY="14.0" prefHeight="318.0" prefWidth="570.0">
            <columns>
                <TableColumn fx:id="LastName" prefWidth="188.0" text="Last Name" />
                <TableColumn fx:id="FirstName" prefWidth="209.0" text="First Name" />
                <TableColumn fx:id="Date" prefWidth="173.0" text="Date" />
            </columns>
        </TableView>
        <ButtonBar layoutX="-5.0" layoutY="343.0" prefHeight="43.0" prefWidth="590.0">
            <buttons>
                <Button mnemonicParsing="false" onAction="#handleDecline" prefHeight="43.0" prefWidth="334.0" text="Decline">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleAdd" prefHeight="53.0" text="Accept">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>
